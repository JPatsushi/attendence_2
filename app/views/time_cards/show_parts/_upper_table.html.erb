<table class="table table-bordered">
    <thead>
        <tr>
            <th rowspan="2" style="vertical-align: middle;">
              <% if current_user == @user %>
                <%= link_to subtract_time_card_path, method: :patch, remote: true do %>
                  <button class= "btn btn-primary">←</button>
                <% end %>
              <% end %>
              <span>　　</span>
              <%= @year %>年<%= @month %>月 時間管理表
              <span>　　</span>
              <% if current_user == @user %>
                <%= link_to add_time_card_path, method: :patch, remote: true do %>
                  <button class= "btn btn-primary">→</button>
                <% end %>
              <% end %>
            </th>
              <th rowspan="2">指定勤務開始時間 <% if @user.designated_work_start_time %><%= time_string_10digits(@user.designated_work_start_time) %><% end %></br>
              指定勤務終了時間 <% if @user.designated_work_end_time %><%= time_string_10digits(@user.designated_work_end_time) %><% end %> </th>
            <th rowspan="2" colspan="3"></br>基本時間 <% if @user.basic_work_time %><%= time_string_10digits(@user.basic_work_time) %><% end %></th>
            <th rowspan="2">初日 <%= @first_day.month %>/<%= @first_day.day %></th>
        </tr>
        <tr>
        </tr>
        <tr>
            <th>所属 <%= @user.depart %></th>
            <th>氏名 <%= @user.name %></th>
            <th>コード</th><th>5555</th>
            <th>出勤日数 <%= @time_cards_count %>日</th>
            <th>締め <%= @last_day.month %>/<%= @last_day.day %></th>
        </tr>
    </thead>
</table>